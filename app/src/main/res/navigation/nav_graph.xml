<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/upcomingEventsFragment">
    <fragment
        android:id="@+id/upcomingEventsFragment"
        android:name="com.example.boardgameapp.screens.upcomingevents.UpcomingEventsFragment"
        android:label="fragment_upcoming_events"
        tools:layout="@layout/fragment_upcoming_events" >
        <action
            android:id="@+id/action_upcomingEventsFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
    </fragment>
    <fragment
        android:id="@+id/attendenceFragment"
        android:name="com.example.boardgameapp.screens.attendence.AttendenceFragment"
        android:label="fragment_attendence"
        tools:layout="@layout/fragment_attendence" />
    <fragment
        android:id="@+id/chooseGamesFragment"
        android:name="com.example.boardgameapp.screens.choosegames.ChooseGamesFragment"
        android:label="fragment_choose_games"
        tools:layout="@layout/fragment_choose_games" />
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.example.boardgameapp.screens.event.EventFragment"
        android:label="fragment_event"
        tools:layout="@layout/fragment_event" >
        <argument
            android:name="eventId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.boardgameapp.screens.food.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.boardgameapp.screens.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.boardgameapp.screens.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <navigation android:id="@+id/login_navigation"
        app:startDestination="@id/registerFragment">
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.boardgameapp.screens.register.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register" />
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.boardgameapp.screens.login.ui.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" />
    </navigation>
</navigation>